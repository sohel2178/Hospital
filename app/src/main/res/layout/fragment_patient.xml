<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.baudiabatash.hospital.Fragments.DetailFragments.PatientFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:background="@drawable/edit_text_background_deselect"
       android:id="@+id/top"
       android:layout_height="wrap_content">
       <TextView
           android:layout_alignParentTop="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="8dp"
           android:id="@+id/patient_name"
           android:text="Patient Name"
           android:textColor="@color/my_color"
           android:textSize="18sp"/>

       <TextView
           android:layout_alignParentTop="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="8dp"
           android:layout_alignParentEnd="true"
           android:id="@+id/patient_id"
           android:text="Patient ID"
           android:textColor="@color/my_color"
           android:textSize="18sp"/>
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:src="@drawable/divider"
           android:layout_below="@+id/patient_name"
           android:id="@+id/divider"/>

       <LinearLayout
           android:padding="6dp"
           android:background="@color/patient_info_back_color"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_below="@+id/divider"
           android:id="@+id/info_container">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:padding="5dp"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="14sp"
                   android:textColor="@color/text_color_white"
                   android:text="Guardian Name"/>

               <TextView
                   android:padding="5dp"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="14sp"
                   android:textColor="@color/text_color_white"
                   android:id="@+id/guardian_name"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:textColor="@color/text_color_white"
                   android:padding="5dp"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="14sp"
                   android:text="Address"/>

               <TextView
                   android:textColor="@color/text_color_white"
                   android:padding="5dp"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="14sp"
                   android:id="@+id/address"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:textColor="@color/text_color_white"
                   android:padding="5dp"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="14sp"
                   android:text="Admitted On"/>

               <TextView
                   android:textColor="@color/text_color_white"
                   android:padding="5dp"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="14sp"
                   android:id="@+id/admission_date"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:textColor="@color/text_color_white"
                   android:padding="5dp"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="14sp"
                   android:text="Reference Doctor"/>

               <TextView
                   android:textColor="@color/text_color_white"
                   android:padding="5dp"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="14sp"
                   android:id="@+id/ref_doctor"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:textColor="@color/text_color_white"
                   android:padding="5dp"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="14sp"
                   android:text="Cabin"/>

               <TextView
                   android:textColor="@color/text_color_white"
                   android:padding="5dp"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="14sp"
                   android:id="@+id/cabin_name"/>
           </LinearLayout>

       </LinearLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/info_container">

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Add Notes"
               android:textColor="@color/text_color_white"
               android:backgroundTint="@color/color_update"
               android:id="@+id/add_notes"/>

           <ImageView
               android:padding="4sp"
               android:layout_width="36dp"
               android:layout_height="36dp"
               android:layout_centerInParent="true"
               android:id="@+id/up_down"
               android:src="@drawable/up"/>

           <Button
               android:layout_alignParentEnd="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Add Test"
               android:textColor="@color/text_color_white"
               android:backgroundTint="@color/color_delete"
               android:id="@+id/add_test"/>

       </RelativeLayout>


   </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_color"
        android:id="@+id/header"
        android:layout_below="@+id/top">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/note"
            android:background="@drawable/custom_bg"
            android:text="Note"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/text_color_white"
            android:textSize="16sp"
            android:padding="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/test"
            android:background="@drawable/custom_bg"
            android:text="Test"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="true"
            android:textColor="@color/text_color_white"
            android:textSize="16sp"
            android:padding="12dp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:id="@+id/test_note_container">

    </FrameLayout>

</RelativeLayout>
